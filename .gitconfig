[user]
	name = Yuka Kato
	email = yucao24hours@gmail.com
[alias]
	s = switch
	sc = switch --create # equivalent to checkout -b
	r = restore # equivalent to checkout
	rs = restore --staged # equivalent to reset HEAD <file>
	ci = commit
	ame = commit --amend
	st = status
	br = branch
	f = fetch
	df = diff
	pl = pull
	plr = pull --rebase
	ps = push
	ad = add
[core]
	excludesfile = /Users/yucao24hours/.gitignore
[color]
	ui = true
[log]
	date = iso
[push]
	default = simple
[fetch]
	prune = true
[merge]
	tool = vimdiff
[credential "https://github.com"]
	helper = !gh auth git-credential
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
